<div class="row">
  <h1>Buscar Diagramas</h1>
  <%= form_tag pages_path, method: :get, class: "navbar-form navbar-left search-form" do %>

    <%= text_field_tag(
        :search,
        params[:search],
        placeholder: "Search",
        class: "form-control"
    ) %>

    <%= button_tag 'Buscar', class: 'btn btn-primary' %>
  <% end %>
</div>

<h3>Lista de diagramas</h3>
<ul>
  <% @diagrams.each do |diagram| %>
    <li>
      <%= link_to diagram.name, app_diagram_path(diagram), class: "btn btn-primary" %>
      <%= diagram.name %>
    </li>
  <% end %>
</ul>
