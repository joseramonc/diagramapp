<h1>Listing nodes</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Position</th>
      <th>Diagram</th>
      <th>Help text</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.text %></td>
        <td><%= node.position %></td>
        <td><%= node.diagram_id %></td>
        <td><%= node.help_text %></td>
        <td><%= node.parent_id %></td>
        <td><%= link_to 'Show', node_path(node) %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node_path(node), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Node', new_node_path %>
